<%= simple_form_for [@user, @comment] do |f| %>
  <%= f.error_notification %>
  <% if current_user %>
    <%= f.input :author, :input_html => { :value => current_user.first_name + ' ' + current_user.last_name }, required: true %>
  <% else %>
    <%= f.input :author, required: true %>
  <% end %>
  <%= f.input :text, input_html:{rows: 10, cols: 50} %>
  <%= f.button :submit %>
<% end %>
