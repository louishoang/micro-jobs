<%= simple_form_for @job do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, required: true %>
  <%= f.input :location, required: true %>
  <%= f.input :budget, required: true %>
  <%= f.association :skills, label: "What skills are required for this job?",
                    collection: Skill.all,
                    input_html: { class: 'multiselectuser',
                    multiple: true } %>
  <%= f.input :description, as: :text, input_html:{rows: 10, cols: 50}, required: true %>
  <%= f.button :submit %>
<% end %>
