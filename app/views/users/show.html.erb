<div>
  <!-- left colum start here -->
  <div class="large-12 small-12 columns">
    <dl class="tabs" data-tab>
      <dd class="active"><a href="#panel1">Primary</a></dd>
      <% if owner?(@user) %>
        <dd><a href="#panel2">Remind Me</a></dd>
        <dd><a href="#panel3">My Profile</a></dd>
      <% end %>
    </dl>
    <div class="tabs-content small-12 columns">
      <div class="content active" id="panel1">
        <div class="panel large-3 small-4 columns">
          <%= image_tag @avatar, alt:"profile-photos", class: "profile_photo" %>
        </div>
        <div class="panel large-8 small-7 columns left" style="margin-left: 10px">
          <p>
            <%= @first_name %>&nbsp;<%= @last_name %>
          </p>
          <p>
            Email: <%= @user_name %>
          </p>
          <p>
            Address: <%= @address %>
          </p>
        </div>
      </div>
      <% if owner?(@user) %>
        <div class="content" id="panel2">
          <p>This is the second panel of the basic tab example. This is the second panel of the   basic tab example.</p>
        </div>
        <div class="content" id="panel3">
            <p><%= render "users/edit", user: @user %></p>
        </div>
      <% end %>
    </div>
  </div >
</div>
